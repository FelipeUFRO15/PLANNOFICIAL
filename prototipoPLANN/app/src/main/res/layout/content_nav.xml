<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.felipe.prototipoplann.NavActivity"
    tools:showIn="@layout/app_bar_nav"
    android:orientation="vertical" >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagen1"
                android:tag="1"
                android:src="@drawable/volcanvillarica"
                android:adjustViewBounds="true"
                android:layout_marginTop="7dp"
                android:onClick="infoImagen" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagen2"
                android:tag="2"
                android:src="@drawable/lagocaburgua"
                android:adjustViewBounds="true"
                android:layout_marginTop="7dp"
                android:onClick="infoImagen" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagen3"
                android:tag="3"
                android:src="@drawable/cascadastolhuaca"
                android:adjustViewBounds="true"
                android:layout_marginTop="7dp"
                android:onClick="infoImagen" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagen5"
                android:tag="4"
                android:src="@drawable/lagopanguipulli"
                android:adjustViewBounds="true"
                android:layout_marginTop="7dp"
                android:onClick="infoImagen" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagen4"
                android:tag="5"
                android:src="@drawable/ojosdelcaburgua"
                android:adjustViewBounds="true"
                android:layout_marginTop="7dp"
                android:onClick="infoImagen" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagen6"
                android:tag="6"
                android:src="@drawable/parquenacionalvillarrica"
                android:adjustViewBounds="true"
                android:layout_marginTop="7dp"
                android:onClick="infoImagen" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
