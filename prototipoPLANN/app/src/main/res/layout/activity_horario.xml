<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horario">
    <!--tools:context="com.example.felipe.prototipoplann.NavActivity"
    tools:showIn="@layout/app_bar_nav"-->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/volcanvillarica"
            android:adjustViewBounds="true" >

            <TextView
                android:layout_width="305dp"
                android:layout_height="91dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TEXTO"
                android:background="#a8e60c0c"
                android:textColor="#FFFFFF"
                android:id="@+id/texto1"
                android:tag="1"
                android:onClick="accionTexto"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="305dp"
                android:layout_height="91dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TERSTO2"
                android:background="#a80c10e6"
                android:textColor="#FFFFFF"
                android:id="@+id/texto2"
                android:tag="2"
                android:onClick="accionTexto"
                android:layout_row="0"
                android:layout_column="1" />

        </GridLayout>
    </HorizontalScrollView>





</LinearLayout>